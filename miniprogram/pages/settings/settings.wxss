.btn{
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
}

.btnnn{
  width:90%;
}

.img{
  margin-top: 15px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.txt{
  margin-top: 15px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.uploader{
  margin-top: 20rpx;
  height: 140rpx;
  width: 100%;
  background: #fff;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: row;
  align-items: center;
  transition: all 300ms ease;
  padding: 0 0 0 40rpx;
  box-sizing: border-box;
}
.uploader-text{
  width: 100%;
  line-height: 52px;
  font-size: 34rpx;
  color: #8537A1;
}