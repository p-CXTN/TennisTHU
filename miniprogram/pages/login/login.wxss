/* miniprogram/pages/login/login.wxss */
@import "../index/index.wxss";
page{
  height: 100%;
  background-size:100%;
}
.footer{
  margin-top: 20rpx;
  width:100%;
  height:80rpx;
  border: 1px solid #F8F8F8;
}

.footer__links{
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1px solid #F8F8F8;
}

.footer__link{
  border: 1px solid #F8F8F8;
  color: #5B6F98;
  width: 60%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: small;
}

.img{
  margin-top: 0px;
  display: flex;
  justify-content: center;  
}

.title{
  margin-top: 0;
  font-size: 45rpx;
  display: flex;
  justify-content: center;  
}
.container {
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  /* background-color: #f2f2f2;     */
} 
 
/*登录图片*/
.login-icon{
  flex: none;
  margin: 0 auto;
  margin-top: 200rpx;
}
.login-img{
  width: 220rpx;
  height: 220rpx;
  border-radius: 110rpx;
  opacity: 0.6;
}
 
/*表单内容*/
.login-from {
  flex: auto;
  height:100%;
}
 
/* 输入框 */
.myno{
  width: 600rpx;
  height: 80rpx;
  margin: 0 auto;
  border:1px solid #ccc;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}
.mypwd{
  width: 600rpx;
  height: 80rpx;
  margin: 0 auto;
  border:1px solid #ccc;
  border-radius: 50rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  font-size: 30rpx;
}
/*按钮*/
.loginBtnView {
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
}
 
.loginBtn {
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 35rpx;
  color: #fff;
  background-color:#8537A1;
  border: 0.1rpx solid #ccc;
  border-radius: 40rpx;
}

.guiBtn{
  width: 600rpx;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 10rpx;
  color: #8537A1;
  background-color:#F8F8F8;
  border: 0.1rpx solid #8537A1;
  border-radius: 40rpx;
}

.weui-cell {
  padding: 10px 15px;
  position: relative;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
 
.weui-cell__bd {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
}
 
.weui-cell_input {
  padding-top: 0;
  padding-bottom: 0;
}
.nameImage, .keyImage {
  margin-right: 10px;
  width: 20px;
  height: 20px;
}

.img-wrapper{
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 650rpx;
  display: flex;
}
.img{
  display: flex;
  justify-content: center;
  align-items: center;
  height:100%;
}

