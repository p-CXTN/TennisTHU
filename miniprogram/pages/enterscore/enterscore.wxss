}
.picker{
  height: 80rpx;
  background-color: #fafafa;
  display: flex;
  justify-content: center;
  align-items: center;
}
.down-border{
  border-bottom: 4rpx solid #fff;
}
.up-border{
  border-top: 4rpx solid #fff;
}

.title{
  margin-top: 20rpx;
  margin-bottom: 30rpx;
  margin-left: 24rpx;
  font-size: medium;
  font-weight: bold;
}
.checkboxgroup{
  width: 100%;
  height: 60rpx;
  margin-top: 20rpx;
  display: flex;
  align-items: center;
}
.checkboxgroup .checkboxlr{
  width: 50%;
  display:flex;
  justify-content: center;
  align-items: center;
}

.row1{
  margin-left: 5rpx;
