/* pages/ymatch/enterscorepopup/espopup.wxss */
.wx-popup {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, .5);
}
.popup-container {
  position: absolute;
  left: 50%;
  top: 50%;
 
  width: 80%;
  max-width: 600rpx;
  border: 2rpx solid #ccc;
  border-radius: 16rpx;
  box-sizing: bordre-box;
  transform: translate(-50%, -50%); 
  overflow: hidden;
  background: #fff;
}
.wx-popup-title {
  width: 100%;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  text-align: center;
  font-size: 36rpx;
  border-bottom: 2rpx solid #8537A1;
}
.wx-popup-con {
  height: 240rpx;
  width:100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wx-popup-con .placeholder{
  width:15%;
  height: 100%;
}
.wx-popup-con .players{
  width:70%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.wx-popup-con .players .playernames{
  width:100%;
  height: 30%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wx-popup-con .players .playernames .playername{
  width:40%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
 .vs{
  width:20%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wx-popup-con .players .scoreinputview{
  width:100%;
  height: 24%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.scoreinput{
  width:20%;
  height: 100%;
  border-radius: 6rpx;
  border: 1rpx solid #8a8a8a;
  display: flex;
  justify-content: center;
  align-items: center;
  padding-left: 74rpx;
}

.wx-popup-btn {
  width:100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.wx-popup-btn .btn-cc {
  width:50%;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border-top: 2rpx solid #ccc;
  border-right: 2rpx solid #ccc;
  font-weight: 600;
}
.btnhv{
  background-color: #9c9c9c;
}
.wx-popup-btn .btn-ok {
  color:#8537A1;
  font-weight: 600;
  width:50%;
  display: flex;
  align-items: center;
  justify-content: center;
  height: 88rpx;
  border-top: 2rpx solid #ccc;
}