.pg-heading{
  margin-top: 30rpx;
  display: flex;
  flex-direction: row;
}
.pagecontainer{
  display: flex;
  flex-direction: column;
}
.lrbutton{
  background-color: #ffffff;
  width:15%;
  height: 80rpx;
  margin-left: 2rpx;
  border: 4rpx solid #fff;
  float:left;
}
.lrimg{
  width:100%;
  height:100%;
