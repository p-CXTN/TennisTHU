}
.img-wrapperr{
  margin-top: 120rpx;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 300rpx;
  display: flex;
  flex-direction: column;
}
.imgr{
  margin-top:200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height:100%;
  width:300rpx;
}
.txtr{
  float:left;
  margin-top: 15px;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.match{
  margin-top: 90rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.match .matchtitleintro{
  width: 80%;
  font-weight: 600;
}
.match .matchtitle{
  width: 90%;
  font-size: 46rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}
.match .matchtime{
  width: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
}
.match .matchtime .matchdate{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color:#b1b1b1;
}
.match .matchtime .starttime{
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  color:#b1b1b1;
}
.introctn{
  margin-top: 30rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.introview{
  background-color: #c4c4c4;
  padding: 20rpx;
  border-radius: 20rpx;
  width: 82%;
}

.rulesview{
  background-color: #ebebeb;
  padding: 20rpx;
  border-radius: 20rpx;
  width: 82%;
}
.guidetexts .drawtext{
  width:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #757575;
}
.guidetexts{
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}