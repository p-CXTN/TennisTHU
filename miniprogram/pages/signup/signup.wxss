/* miniprogram/pages/signup/signup.wxss */
@import "../index//index.wxss";
navigator{
  display:inline;
}
 
.list_item{
  margin-top:0;
  padding:10px;
  height: 400rpx;
  border-bottom:1px solid #E8E8E8;
  border-top: 1px solid #E8E8E8;
}
 
.list_item .info{
  width:100%;
  float:left;
  height:30px;
  position:relative;
}
.list_item .info .title{
  color:#333;
  margin-left:10rpx;
  margin-top: 20rpx;
  font-size: 20px;
}
.list_item .info .description{
  color:rgba(51, 51, 51, 0.74);
  margin-left:10rpx;
  margin-top: 40rpx;
  font-size: 15px;
}
.list_item .info .date{
  float: left;
  color:rgba(51, 51, 51, 0.466);
  margin-left:10rpx;
  margin-top: 170rpx;
  font-size: 13px;
}

.moreinfoc{
  width: 50%;
  float: left;
}
.signedupview{
  width: 100%;
  height: 36rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.signupbuttonview{
  width: 100%;
  height: 72rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.signupc{
  width: 46%;
  height: 64rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 32rpx;
  background-color: #8537A1;
  border: 1rpx solid #8537A1;
}
.signupchv{
  background-color: #dbdbdb;
  color: #646464;
}
.signedupb{
  height: 24rpx;
  width: 76rpx;
  font-size: 14rpx;
  color: #18ec18;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 12rpx;
  border: 1rpx solid #15cc15;
  padding: 2rpx;
}
button[class="signedup"]::after {
  border: 0;
  color: #18ec18;
}
.signupcc{
  width: 46%;
  height: 64rpx;
  color: #b91818;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 32rpx;
  border: 1rpx solid #b91818;
}
.signupcchv{
  background-color: #b91818;
